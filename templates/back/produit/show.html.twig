{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ produit.photo }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
        </tbody>
    </table>

   <table class="table">

		<thead>
			<tr>
				<th>Jour</th>
				<th>Titre</th>
				<th>Photo</th>
				<th>Description</th>
				<th>Hotel</th>
			</tr>
		</thead>

		{# =======================boucle etape======================================= #}
	<tbody>
   

        {% for etape in produit.etapes %}

             <tr>
                <td>{{ loop.index }}</td>
                <td>{{ etape.titre }}</td>
                <td>{{ etape.photo}}</td>
                <td>{{ etape.description }}</td>
                <td>{{ etape.hotel }}</td>
            </tr>


        {% endfor %}

	</tbody>
</table>



    <a href="{{ path('app_produit_index') }}">back to list</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>

